<article class="post-card">
  <div class="post-card__header">
    <h3 class="post-card__title">
      <a href="/posts/{{id}}">{{title}}</a>
    </h3>
    <span class="post-card__meta">
      от {{author}} • {{wordCount}} слов
    </span>
  </div>
  <div class="post-card__content">
    <p class="post-card__text">{{content}}</p>
  </div>
  <div class="post-card__footer">
    <a href="/posts/{{id}}" class="btn btn-small">Читать далее</a>
    {{#if isAuthenticated}}
      <div class="post-card__admin-actions">
        <a href="/posts/{{id}}/edit" class="btn btn-small btn-secondary">Редактировать</a>
        <form method="post" action="/posts/{{id}}" style="display: inline;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-small btn-danger"
                  onclick="return confirm('Удалить пост?')">
            Удалить
          </button>
        </form>
      </div>
    {{/if}}
  </div>
</article>