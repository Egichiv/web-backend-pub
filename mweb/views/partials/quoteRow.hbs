<tr class="quote-row">
  <td class="quote-row__id">{{id}}</td>
  <td class="quote-row__author">{{author}}</td>
  <td class="quote-row__text">"{{text}}"</td>
  <td class="quote-row__genre">
    <span class="quote-genre quote-genre--{{genreClass}}">{{genre}}</span>
  </td>
  <td class="quote-row__date">{{formatDate date}}</td>
  {{#if ../isAuthenticated}}
    <td class="quote-row__actions">
      <button class="quote-row__edit-btn" data-quote-id="{{id}}">✏️</button>
      <button class="quote-row__delete-btn" data-quote-id="{{id}}">🗑️</button>
    </td>
  {{/if}}
</tr>