<!-- views/reviews-admin/edit.hbs -->
<div class="form-container">
  <h1>Редактировать отзыв #{{review.id}}</h1>
  <p><strong>Манга:</strong> {{review.mangaTitle}}</p>

  <form action="/reviews-admin/{{review.id}}/edit" method="POST">
    <div class="form-group">
      <label for="rating">Оценка:</label>
      <select id="rating" name="rating" required>
        <option value="1" {{#if (eq review.rating 1)}}selected{{/if}}>1 ⭐</option>
        <option value="2" {{#if (eq review.rating 2)}}selected{{/if}}>2 ⭐</option>
        <option value="3" {{#if (eq review.rating 3)}}selected{{/if}}>3 ⭐</option>
        <option value="4" {{#if (eq review.rating 4)}}selected{{/if}}>4 ⭐</option>
        <option value="5" {{#if (eq review.rating 5)}}selected{{/if}}>5 ⭐</option>
      </select>
    </div>

    <div class="form-group">
      <label for="comment">Комментарий:</label>
      <textarea id="comment" name="comment" rows="4">{{review.comment}}</textarea>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Сохранить</button>
      <a href="/reviews-admin" class="btn btn-secondary">Отменить</a>
    </div>
  </form>
</div>

<style>
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }

  .form-group textarea {
    resize: vertical;
  }

  .form-actions {
    margin-top: 30px;
  }

  .btn {
    padding: 12px 24px;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    cursor: pointer;
    margin-right: 10px;
    font-size: 16px;
  }

  .btn-primary {
    background: #007bff;
    color: white;
  }

  .btn-secondary {
    background: #6c757d;
    color: white;
  }

  .btn:hover {
    opacity: 0.9;
  }
</style>