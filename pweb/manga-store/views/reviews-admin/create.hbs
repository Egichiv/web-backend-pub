<!-- views/reviews-admin/create.hbs -->
<div class="form-container">
  <h1>Добавить отзыв</h1>

  <form action="/reviews-admin/add" method="POST">
    <div class="form-group">
      <label for="userId">ID пользователя:</label>
      <input type="number" id="userId" name="userId" required value="1" min="1">
      <small>Используйте ID существующего пользователя (например: 1, 2, 3...)</small>
    </div>

    <div class="form-group">
      <label for="mangaId">ID манги:</label>
      <input type="number" id="mangaId" name="mangaId" required value="1" min="1">
      <small>Используйте ID существующей манги (например: 1, 2, 3...)</small>
    </div>

    <div class="form-group">
      <label for="rating">Оценка:</label>
      <select id="rating" name="rating" required>
        <option value="">Выберите оценку</option>
        <option value="1">1 ⭐</option>
        <option value="2">2 ⭐</option>
        <option value="3">3 ⭐</option>
        <option value="4">4 ⭐</option>
        <option value="5">5 ⭐</option>
      </select>
    </div>

    <div class="form-group">
      <label for="comment">Комментарий:</label>
      <textarea id="comment" name="comment" rows="4" placeholder="Ваш отзыв..."></textarea>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Сохранить</button>
      <a href="/reviews-admin" class="btn btn-secondary">Отменить</a>
    </div>
  </form>
</div>

<style>
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }

  .form-group textarea {
    resize: vertical;
  }

  .form-group small {
    display: block;
    margin-top: 5px;
    color: #666;
    font-size: 14px;
  }

  .form-actions {
    margin-top: 30px;
  }

  .btn {
    padding: 12px 24px;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    cursor: pointer;
    margin-right: 10px;
    font-size: 16px;
  }

  .btn-primary {
    background: #007bff;
    color: white;
  }

  .btn-secondary {
    background: #6c757d;
    color: white;
  }

  .btn:hover {
    opacity: 0.9;
  }
</style>